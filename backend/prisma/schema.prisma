datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  clerkUserId  String   @unique
  name         String?
  email        String?  @unique
  tuyaUid      String?  @unique
  accessToken  String?
  refreshToken String?
  tokenExpiry  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

